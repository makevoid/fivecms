<h1>{{page.name}}</h1>

{{#each cont in conts}}
  <div {{action "edit" target="cont"}} class="cont" {{bindAttr class="cont.isEditable"}} {{bindAttr data-type="cont.type"}}>
    {{#if cont.isEditable}}
      <div class="preview">
        {{cont.cont_string}}
      </div>

      {{textarea value=cont.cont action="saved_cont" target="controllers.cont"}}
      <div class='clear'></div>
    {{else}}
      {{cont.cont_string}}
    {{/if}}
  </div>
  <div class='clear'></div>
{{/each}}

<a {{action "add"}} href='location.void(0)'>[+ add content]</a>